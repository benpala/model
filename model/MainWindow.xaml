    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="6.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
      
        <StackPanel HorizontalAlignment="left" Orientation="Horizontal" Width="600" >

            <Button Style="{StaticResource BouttonEmploye}" Grid.Row="0"  Width="80" Height="70" Margin="50,10,10,0" Click="employeLst">
