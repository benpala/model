                    <TextBlock>Fermer l'application</TextBlock>
                </Button.ToolTip>

            </Button>
        </StackPanel>


        <ContentPresenter Grid.Row="1" Name="contentPresenter" Margin="-10,10,10,-10" />

    </Grid>
</Window>
